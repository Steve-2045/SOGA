# Include configuration files
include config.toml
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include documentation
recursive-include docs *.md *.rst *.txt

# Include examples
recursive-include examples *.py *.toml *.md

# Exclude development and temporary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude test files from distribution
prune tests
prune scripts/audit
prune .archive
prune htmlcov
prune .pytest_cache
